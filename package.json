{
  "name": "typescript-api-template",
  "version": "1.0.0",
  "description": "Simple template for creating a TypeScript REST API",
  "private": true,
  "main": "./dist/server.js",
  "repository": "https://github.com/jaredpetersen/typescript-api-template.git",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "tsc",
    "test": "jest --verbose",
    "lint": "tslint 'src/**/*.ts'",
    "pretty": "prettier --write \"src/**/*.{ts,json}\"",
    "coverage": "jest --coverage"
  },
  "author": "Jared Petersen <jaredtoddpetersen@gmail.com> (https://github.com/jaredpetersen)",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "restoreMocks": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test-ut|test-it))\\.[jt]sx?$",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!<rootDir>/node_modules/",
      "!src/server.ts",
      "!src/app.ts",
      "!src/routes.ts",
      "!src/logger.ts",
      "!src/config.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.10.4",
    "@types/supertest": "^2.0.7",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  }
}
